{
  "name": "playwright-record-replay-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:e2e:record": "playwright test && yarn run test:e2e:sanitize-hars",
    "test:e2e:record:ui": "playwright test --ui",
    "test:e2e:replay": "cross-env PLAYWRIGHT_REPLAY=true playwright test",
    "test:e2e:replay:ui": "cross-env PLAYWRIGHT_REPLAY=true playwright test --ui",
    "test:e2e:sanitize-hars": "tsx ./src/e2e/utils/sanitize-hars.ts && yarn run format:hars",
    "format:hars": "prettier --write ./src/e2e/api-mock/**/*.json"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.75.5",
    "oidc-client-ts": "^3.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-oidc-context": "^3.3.0",
    "react-router": "^7.6.3",
    "react-toastify": "^11.0.5",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.54.0",
    "@types/har-format": "^1.2.16",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "fast-glob": "^3.3.3",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "playwright-record-replay-backend": "workspace:^",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
